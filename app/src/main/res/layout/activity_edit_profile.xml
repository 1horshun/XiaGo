<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/plain_food"
    tools:context=".EditProfileActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="32dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_marginTop="20dp"
        android:hint="Please input the same username"
        android:inputType="textPersonName"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginTop="10dp"
        android:hint="Mobile Number"
        android:inputType="number"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:inputType="text"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/cfmPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd"
        android:layout_marginTop="10dp"
        android:hint="Confirm New Password"
        android:inputType="text"
        android:textSize="22dp" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cfmPwd"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:text="Save Changes"
        android:textSize="20dp"
        android:backgroundTint="#6FD828"/>

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateBtn"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="70dp"
        android:text="Remove Account"
        android:textSize="20dp"
        android:backgroundTint="#DC143C"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteBtn"
        android:layout_marginTop="5dp"
        android:textColor="#DC143C"
        android:layout_marginLeft="20dp"
        android:text="Clicking this button will result in erasing your user data. Please proceed with caution."/>

</RelativeLayout>